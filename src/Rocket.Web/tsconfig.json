{
  "compilerOptions": {
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "module": "umd",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",

    "lib": [ "es2015", "dom" ]
  },
  "compileOnSave": true,
  "files": [
    "wwwroot/js/Player.ts",
    "wwwroot/js/PlayerMetadataAction.ts",
    "wwwroot/js/PlayerMetadata.ts",
    "wwwroot/js/Point.ts",
    "wwwroot/js/CanvasTouch.ts",
    "wwwroot/js/KeyCodes.ts",
    "wwwroot/js/Constants.ts",
    "wwwroot/js/Shot.ts",
    "wwwroot/js/Communication.ts",
    "wwwroot/js/RocketView.ts",
    "wwwroot/js/Bootstrap.ts"
  ],
  "include": [
    "wwwroot/js/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
